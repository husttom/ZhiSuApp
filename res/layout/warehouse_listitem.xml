<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitemheight"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/warehouse_item_img"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listitemspace"
        android:layout_marginRight="@dimen/listitemspace"
        android:scaleType="center"
        android:src="@drawable/bill_img" />

    <Button
        android:id="@+id/warehouse_item_detail"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listitemspace"
        android:layout_marginRight="@dimen/listitemspace"
        android:background="@drawable/warehouse_item_detail_btnbg_selector"
        android:gravity="center"
        android:state_enabled="false"
        android:text="@string/warehouse_bill_detail"
        android:textColor="@color/text_color"
        android:textSize="@dimen/Text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/warehouse_item_bill"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listitemheight"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/warehouse_item_detail"
        android:layout_toRightOf="@id/warehouse_item_img"
        android:paddingLeft="@dimen/listitemspace"
        android:paddingTop="@dimen/listitemspaceTop"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/Text_size" />

</RelativeLayout>